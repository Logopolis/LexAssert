<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
	<VersionPrefix>1.0.1</VersionPrefix>
	<Authors>Chris Molloy Wischer</Authors>
	<Copyright>Share and Enjoy</Copyright>
	<PackageProjectUrl>logopolis.uk/packages/lexassert</PackageProjectUrl>
	<RepositoryUrl>https://github.com/Logopolis/LexAssert</RepositoryUrl>
	<PackageTags>xUnit;Assert</PackageTags>
	<PackageReadmeFile>README.md</PackageReadmeFile>
	<Description>Some useful equality Asserts for use with xUnit.</Description>
	<IsPackable>true</IsPackable>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	<AssemblyVersion>1.0.0</AssemblyVersion>
	<FileVersion>1.0.0</FileVersion>
	<PackageReleaseNotes>1. Output a useful error when Lassert.JsonEqual fails; 2. Make Lassert.JsonEqual non-generic so it does not need matching types in order to match Json outputs.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
	<PackageReference Include="JsonDiffPatch.Net" Version="2.3.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="xunit" Version="2.4.1" />
  </ItemGroup>
	
	<ItemGroup>
		<None Include="..\README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

</Project>
